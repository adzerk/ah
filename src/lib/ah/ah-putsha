# vim: set ft=sh:

[[ -z "$AH_APP" ]] && ah_die "application not configured: do '$AH init'"
[[ -z "$AH_ENV" ]] && ah_die "no environment set: do '$AH env <env>'"

if [[ -n "$1" ]]; then
  sha=$1
else
  sha=$(git rev-parse HEAD)
fi

echo -n "Setting deploy SHA..."
echo "export AH_SHA=$sha" |aws s3 cp - s3://$(ah_data $AH_APP)/${AH_ENV}.sh > /dev/null
echo done.
